# JuryBox Backend - Docker Environment Variables
# Copy this file to .env before running docker-compose

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=jurybox
POSTGRES_PASSWORD=jurybox_password
POSTGRES_DB=jurybox
POSTGRES_PORT=5432

# Database URL (auto-generated from above, do not change)
DATABASE_URL=postgresql://jurybox:jurybox_password@postgres:5432/jurybox?schema=public

# ============================================================================
# SERVER
# ============================================================================
NODE_ENV=production
PORT=10000
BACKEND_URL=http://localhost:10000

# ============================================================================
# HEDERA CONFIGURATION
# ============================================================================
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=302e020100300506032b657004220420YOUR_PRIVATE_KEY
HEDERA_OPERATOR_ACCOUNT_ID=0.0.YOUR_OPERATOR_ACCOUNT_ID
HEDERA_OPERATOR_PRIVATE_KEY=302e020100300506032b657004220420YOUR_OPERATOR_PRIVATE_KEY

# Hedera JSON-RPC for EVM compatibility
HEDERA_JSON_RPC_URL=https://testnet.hashio.io/api

# ============================================================================
# OPENAI
# ============================================================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# ============================================================================
# PINATA (IPFS)
# ============================================================================
PINATA_JWT=YOUR_PINATA_JWT_TOKEN
PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# ============================================================================
# ERC-8004 REGISTRY
# ============================================================================
# Private key for ERC-8004 registry operations (EVM format)
REGISTRY_PRIVATE_KEY=0xYOUR_REGISTRY_PRIVATE_KEY

# ============================================================================
# X402 FACILITATOR
# ============================================================================
X402_FACILITATOR_ACCOUNT_ID=0.0.YOUR_FACILITATOR_ACCOUNT_ID
X402_FACILITATOR_PRIVATE_KEY=302e020100300506032b657004220420YOUR_FACILITATOR_PRIVATE_KEY

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=*

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# PGADMIN (OPTIONAL - for database management UI)
# ============================================================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@jurybox.local
PGADMIN_PASSWORD=admin
